

<%= form_for(@location) do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>


<!-- Note to me JQ: for some reason yet unknown to me, you can't put the following form class above
the form_for notation or else your buttons won't register your actions. Huh. -->


    <form class="form-horizontal">
      <div class="form-group">
        <div class="col-md-offset-1 col-md-1">
        <%= f.label :name %></div>
        <div class="col-md-4">
        <%= f.text_field :name, :size => 50 %>
        </div>
      </div>

    <br>
    <br>

    <div class="form-group">
      <div class="col-md-offset-1 col-md-1">
        <%= f.label :address %></div>
        <div class="col-md-4">
        <%= f.text_field :address, :size => 50 %></div>
      </div>

      <br>

      <div class="form-group" style="padding-top: 6px">
        <div class="col-md-offset-1 col-md-1">
          <%= f.label :zipcode %></div>
          <div class="col-md-4">
          <%= f.text_field :zipcode, :size => 50 %></div>
        </div>

    <br>
    <br>

    <div class="form-group">
      <div class="col-md-offset-2">&nbsp;&nbsp;&nbsp;
        <%= f.submit class: "btn btn-primary" %>&nbsp;&nbsp;&nbsp;
        <% if current_page?(:action => 'new') %>
        <%= link_to 'Cancel', locations_path, class: "btn btn-default" %>
        <% else %>
        <%= link_to 'Destroy', location_path(@location), class: "btn btn-danger", method: :delete, data:
        { confirm: 'Are you sure?' } %>&nbsp;&nbsp;&nbsp;
        <%= link_to 'Cancel', locations_path, class: "btn btn-default" %>

    <% end %>

        </div>
    </div>



<br>

    <% end %>

</form>
