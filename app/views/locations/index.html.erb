<div class="page-header">
  <div class="pull-right">
    <a href="/locations/new" <button type="button" class="btn btn-info">New location</button></a>
  </div>
  <h1>Locations</h1>
</div>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zip code</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>



    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <td><%= location.address %></td>
        <td><%= location.zipcode %></td>


        <!-- <td><%= link_to 'Show', location %></td> -->
        <td><div class="text-right">
          <%= link_to 'Edit', edit_location_path(location), class: "btn btn-info" %>
          &nbsp;&nbsp;<%= link_to 'Destroy', location, class: "btn btn-danger", method: :delete, data:
        { confirm: 'Are you sure?' } %>
        &nbsp;&nbsp;<%= link_to 'See all events at this location', location_path(location), class: "btn btn-primary" %>
        &nbsp;&nbsp;<%= link_to 'Create new event', new_location_event_path(location), class: "btn btn-info" %>



        </div></td>

    </tr>






    <% end %>


  </tbody>
</table>
